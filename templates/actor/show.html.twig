{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <div class="media">
        <h1>Actor</h1>
        <img class="align-self-start mr-3" src="{{ vich_uploader_asset(actor) }}" alt="{{ actor.name }}poster"> 
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ actor.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ actor.name }}</td>
                </tr>
                <tr>
                    <th>Poster</th>
                    <td>{{ actor.poster }}</td>
                </tr>
            
            </tbody>
        </table>

        <ul>
            {% for program in actor.programs %}
            <li><a href="{{ path('program_show', { 'slug': program.slug }) }}">{{ program.title }}</a></li>
            
                {% else %}
            
                    <li>Aucune s√©rie pour cette acteur</li>
            
                {% endfor %}
            
            </ul> 

        <a href="{{ path('app_actor_index') }}">back to list</a>

        <a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>

        {{ include('actor/_delete_form.html.twig') }}
    </div>
{% endblock %}
